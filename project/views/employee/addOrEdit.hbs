<h3>{{viewTitle}}</h3>

<form action="/employee" method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="{{employee._id}}">
    <div class="form-group">
        <label>TaskName</label>
        <input type="text" class="form-control" name="Taskname" placeholder="TaskName" value="{{employee.Taskname}}" required>
     
    <div class="form-group">
        <label>Creation_timestamp</label>
        <input type="date" class="form-control" name="creation_timestamp" placeholder="Creation_timestamp" value="{{employee.creation_timestamp}}" required>
     
      <div class="form-group">
        <label>edit_timestamp</label>
        <input type="date" class="form-control" name="edit_timestamp" placeholder="edit_timestamp" value="{{employee.edit_timestamp}}" required>
      
      <div class="form-group">
        <label>expiry</label>
        <input type="date" class="form-control" name="expiry" placeholder="expiry" value="{{employee.expiry}}" required>
    
      <div class="form-group">
        <label>completion_status</label>
        <input type="text" class="form-control" name="completion_status" placeholder="completion_status" value="{{employee.completion_status}}" required>
      
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>CreatedBy</label>
            <input type="text" class="form-control" name="createdBy" placeholder="CreatedBy" value="{{employee.createdBy}}" required>
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-info"><i class="fa fa-database"></i> Submit</button>
        <a class="btn btn-secondary" href="/employee/list"><i class="fa fa-list-alt"></i> View All</a>
    </div>
</form>